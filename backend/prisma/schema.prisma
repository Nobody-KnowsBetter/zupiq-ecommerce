generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favorites Favorite[]
  wishlist  Wishlist[]
  cart      CartItem[]
}

model Product {
  id          Int     @id @default(autoincrement())
  title       String
  price       Float
  description String?
  category    String
  image       String
  rating      Float?
}

model Favorite {
  id              String   @id @default(uuid())
  userId          String
  productId       Int
  productTitle    String
  productPrice    Float
  productImage    String
  productCategory String
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model Wishlist {
  id              String   @id @default(uuid())
  userId          String
  productId       Int
  productTitle    String
  productPrice    Float
  productImage    String
  productCategory String
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model CartItem {
  id              String   @id @default(uuid())
  userId          String
  productId       Int
  quantity        Int      @default(1)
  productTitle    String
  productPrice    Float
  productImage    String
  productCategory String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}
